@model ApplicationDetailViewModel
@{
    ViewBag.Title = $"Application Details";
}
<style>
    h6 {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }

</style>
<!-- breadcrumb area -->
<div class="rts__section breadcrumb__background">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 position-relative d-flex justify-content-md-between justify-content-center align-items-center">
                <div class="breadcrumb__area max-content breadcrumb__padding">
                    <div class="rts__job__card__big bg-transparent p-0 position-relative z-1 flex-wrap justify-content-between d-flex gap-4 align-items-center">
                        <div class="d-flex gap-4 align-items-center flex-md-row flex-column mx-auto mx-md-0">
                            <div class="company__icon rounded-2 bg-white">
                                <img class="" src="@Model.CandidateAvatar" alt="">
                            </div>
                            <div class="job__meta w-100 d-flex text-center text-md-start flex-column gap-2">
                                <div class="">
                                    <h3 class="job__title fw-bold h3 mb-0">@Model.CandidateName</h3>
                                </div>
                                <div class="d-flex gap-3 justify-content-center justify-content-md-start flex-wrap mb-3 mt-2">
                                    <div class="d-flex gap-2 align-items-center">
                                        @* @Model.CompanyField *@
                                    </div>
                                    <div class="d-flex gap-2 align-items-center">
                                        <i class="fa-light fa-briefcase"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="breadcrumb__apply max-content">
                        <a href="#" class="rts__btn apply__btn be-1 fill__btn">Follow</a>
                    </div>
                </div>
                <div class="breadcrumb__area__shape d-flex gap-4 justify-content-end align-items-center">
                    <div class="shape__one common">
                    </div>
                    <div class="shape__two common">
                        <img src="~/assets/img/breadcrumb/shape-2.svg" alt="">
                    </div>
                    <div class="shape__three common">
                        <img src="~/assets/img/breadcrumb/shape-3.svg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- job list one -->
<div class="rts__section section__padding">
    <div class="container">
        <div class="row g-30">
            <div class="col-xl-8 col-lg-7">
                <div class="employer__details" id="description">
                    <h6>Applied Job: @Model.JobTitle</h6>
                    <h6>Cover Letter</h6>
                    @Html.Raw(Model.CoverLetter ?? "<p>Description unavailable</p>")
                    <h6>Resume</h6>
                    <iframe src="@Model.Resume.Url" width="100%" height="600px"></iframe>
                    <h6>AI Sumary</h6>
                        @if (string.IsNullOrEmpty(Model.Resume.AiSumary))
                        {
                        <p>
                            AI Sumary Unavailable
                        </p>
                    }
                    else
                    {
                        <p>
                            @Model.Resume.AiSumary
                        </p>
                    }
                </div>
            </div>
            <div class="col-lg-5 col-xl-4  d-flex flex-column gap-40 ">
                <div class="job__overview">
                    <h6 class="fw-semibold mb-20">Applicant Overview</h6>
                    <div class="job__overview__content">
                        <ul>
                            <li class="d-flex flex-wrap gap-3 gap-sm-0 align-items-center justify-content-between">
                                <span class="left-text"> <i class="rt-calender"></i> Applied on</span>
                                <span class="text">
                                    @Helper.DisplayDate(Model.ApplicationDate)
                                </span>
                            </li>
                            <li class="d-flex flex-wrap gap-3 gap-sm-0 align-items-center justify-content-between">
                                <span class="left-text"> <i class="fa-light fa-user"></i> AI Ranking</span>
                                <span class="text">
                                    @Model.AIRanking / 5
                                </span>
                            </li>
                            <li class="d-flex flex-wrap gap-3 gap-sm-0 align-items-center justify-content-between">
                                <span class="left-text"> <i class="rt-branch"></i> Phone</span>
                                <span class="text"> @Model.Phone</span> 
                            </li>

                            <li class="d-flex flex-wrap gap-3 gap-sm-0 align-items-center justify-content-between">
                                <a class="left-text"> <i class="rt-branch"></i> Profile</a>
                                @* //TODO *@
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="job__contact">
                    <h6 class="fw-semibold mb-20">Contact Me</h6>
                    <a class="rts__btn apply__btn w-100" asp-action="ChatWith" asp-controller="Message" asp-route-chatUserId="@Model.CandidateId">Go to Message</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- job list one end -->