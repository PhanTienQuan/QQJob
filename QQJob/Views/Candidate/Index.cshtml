@model QQJob.ViewModels.CandidateViewModels.DashboardViewModel
@{
    ViewBag.Title = "Candidate Dashboard";
}
<div class="dashboard__content d-flex template-dashboard ">
    <partial name="_LeftMenu" />
    <div class="dashboard__right">
        <div class="dash__content" id="content-area">
            <div class="dash__overview">
                <h6 class="fw-medium mb-30">Dashboard Overview</h6>
                <div class="overview__content">
                    <div class="single__overview">
                        <div class="icon">
                            <i class="fa-solid fa-briefcase" style="font-size:30px;color:#34A853;"></i>
                        </div>
                        <div class="content">
                            <h5 class="lh-sm">@Model.ApplicationCount</h5>
                            <p class="font-20">Jobs Applied</p>
                        </div>
                    </div>
                    <div class="single__overview">
                        <div class="icon">
                            <i class="fa-solid fa-heart" style="font-size:30px;color:#34A853;"></i>
                        </div>
                        <div class="content">
                            <h5 class="lh-sm">@Model.SavedJobCount</h5>
                            <p class="font-20">Jobs Saved</p>
                        </div>
                    </div>
                    <div class="single__overview">
                        <div class="icon">
                            <i class="fa-solid fa-bookmark" style="font-size:30px;color:#34A853;"></i>
                        </div>
                        <div class="content">
                            <h5 class="lh-sm">@Model.UnreadMessageCount</h5>
                            <p class="font-20">Messages</p>
                        </div>
                    </div>
                    <div class="single__overview">
                        <div class="icon">
                            <i class="fa-solid fa-bell" style="font-size:30px;color:#34A853;"></i>
                        </div>
                        <div class="content">
                            <h5 class="lh-sm">@Model.UnreadNotificationCount</h5>
                            <p class="font-20">Notifications</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Recent Applications -->
            <div class="applied__jobs mt-30">
                <h6 class="fw-medium mb-30">Recent Applications</h6>
                <div class="short__list__candidate">
                    @if (Model.RecentApplications != null && Model.RecentApplications.Any())
                    {
                        foreach (var application in Model.RecentApplications)
                        {
                            <div class="single__shortlist__item">
                                <div class="author__info">
                                    <div class="author__meta">
                                        <div class="author__name">
                                            <h6 class="fw-semibold mb-1">@application.Job?.JobTitle</h6>
                                            <p class="mb-0">@application.Job?.Employer?.User?.FullName</p>
                                        </div>
                                    </div>
                                    <div class="author__info__list">
                                        <span><i class="fa-light fa-clock"></i> @application.ApplicationDate.ToShortDateString()</span>
                                        <span class="badge">@application.Status</span>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="single__shortlist__item">
                            <p>No applications yet.</p>
                        </div>
                    }
                </div>
            </div>
            <!-- Applied Jobs -->
            <div class="applied__jobs  mt-30">
                <h6 class="fw-medium mb-30">Applications Overview</h6>
                <div class="row px-3 d-flex flex-column g-30">
                    <!-- single job item -->
                    <div class="rts__job__card__big d-flex flex-wrap flex-md-nowrap gap-4 align-items-center">
                        <div class="company__icon">
                            <img src="assets/img/home-1/company/apple.svg" alt="">
                        </div>
                        <div class="d-flex justify-content-between flex-wrap w-100 gap-3 gap-lg-3">
                            <div class="job__meta">
                                <div class="d-flex align-items-center justify-content-between gap-3">
                                    <a href="job-details-3.html" class="job__title h6 fw-semibold">Digital Marketer, Apple</a>
                                    <span class="badge d-none d-sm-block">Featured</span>
                                </div>
                                <div class="d-flex gap-3 flex-wrap gap-lg-4 fw-medium">
                                    <div class="d-flex gap-2 align-items-center">
                                        <i class="fa-light fa-location-dot"></i> Atlanta, USA
                                    </div>
                                    <div class="d-flex gap-2 align-items-center">
                                        <i class="fa-light rt-briefcase"></i> Full Time
                                    </div>
                                    <div class="d-flex gap-2 align-items-center">
                                        <i class="fa-light fa-clock"></i> 30 Days Ago
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex gap-3 gap-xl-5 flex-wrap align-items-center">
                                <div class="job__tags d-flex flex-wrap gap-3">
                                    <a href="#">Marketing</a>
                                    <a href="#">Selling</a>
                                    <a href="#">Selling</a>
                                </div>
                                <div class="d-flex gap-3 flex-wrap">
                                    <div class="job__sallery d-flex gap-2 align-items-center">
                                        <i class="fa-sharp rt-price-tag"></i> $500 <span>Monthly</span>
                                    </div>
                                    <button class="apply__btn">View Job</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- single job item end -->
                    <!-- single job item -->
