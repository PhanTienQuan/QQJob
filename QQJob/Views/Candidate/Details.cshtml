@model QQJob.ViewModels.CandidateViewModels.CandidateDetailViewModel
@{
    ViewBag.Title = "Candidate Details";
}
<!-- breadcrumb area -->
<div class="rts__section breadcrumb__background">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 position-relative d-flex justify-content-between align-items-center">
                <div class="breadcrumb__area max-content breadcrumb__padding">
                    <div class="rts__job__card__big bg-transparent p-0 position-relative z-1 flex-wrap justify-content-between d-flex gap-4 align-items-center">
                        <div class="d-flex gap-4 gap-md-5 align-items-center flex-md-row flex-column mx-auto mx-md-0">
                            <div class="author__icon rounded-2">
                                <img class="" src="@(string.IsNullOrEmpty(Model.Avatar) ? Url.Content("~/assets/img/avatars/default-avatar.jpg") : Model.Avatar)" alt="">
                            </div>
                            <div class="job__meta w-100 d-flex text-center text-md-start flex-column gap-2">
                                <div class="">
                                    <h3 class="job__title h3 mb-0">@Model.FullName</h3>
                                </div>
                                <div class="d-flex gap-3 justify-content-center justify-content-md-start flex-wrap mb-3 mt-2">
                                    <div class="d-flex gap-2 align-items-center">
                                        @Model.JobTitle
                                    </div>
                                </div>
                                <div class="job__tags d-flex justify-content-center justify-content-md-start flex-wrap gap-3">
                                    @foreach (var skill in Model.Skills)
                                    {
                                        <a href="#">@skill</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="breadcrumb__apply d-flex gap-3 max-content">
                        @if (!string.IsNullOrEmpty(Model.ResumeUrl))
                        {
                            <a href="@Model.ResumeUrl" class="rts__btn be-1 apply__btn fill__btn" target="_blank">CV Download</a>
                        }
                    </div>
                </div>
                <div class="breadcrumb__area__shape d-flex gap-4 justify-content-end align-items-center">
                    <div class="shape__one common"></div>
                    <div class="shape__two common">
                        <img src="~/assets/img/breadcrumb/shape-2.svg" alt="">
                    </div>
                    <div class="shape__three common">
                        <img src="~/assets/img/breadcrumb/shape-3.svg" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<!-- job list one -->
<div class="rts__section section__padding">
    <div class="container">
        <div class="row g-30">
            <div class="col-lg-7 col-xl-8">
                <div class="rts__job__details">
                    <div id="description" class="mb-30">
                        <h6 class="fw-semibold mb-20">About Candidate</h6>
                        <p>@Html.Raw(Model.Description)</p>
                    </div>
                    <div id="responsibility" class="mb-30">
                        <h6 class="fw-semibold mb-20">Education</h6>
                        <ul class="timeline">
                            @foreach (var edu in Model.Educations)
                            {
                                <li>
                                    <span class="timeline__title d-block">@edu.UniversityName</span>
                                    <span class="timeline__subtitle d-block">
                                        @(edu.StartDate?.ToString("yyyy") ?? "") - @(edu.EndDate?.ToString("yyyy") ?? "")
                                    </span>
                                    <p class="mt-2 fw-medium">@edu.Description</p>
                                </li>
                            }
                        </ul>
                    </div>
                    <div id="experience" class="mb-30">
                        <h6 class="fw-semibold mb-20 text-capitalize">Experience</h6>
                        <ul class="timeline">
                            @foreach (var exp in Model.Experiences)
                            {
                                <li>
                                    <span class="timeline__title d-block">@exp.ExpTitle</span>
                                    <span class="timeline__subtitle d-block">
                                        @(exp.StartDate?.ToString("yyyy") ?? "") - @(exp.EndDate?.ToString("yyyy") ?? "")
                                    </span>
                                    <p class="mt-2 fw-medium">@exp.Description</p>
                                </li>
                            }
                        </ul>
                    </div>
                    <div id="skill" class="mb-30">
                        <h6 class="fw-semibold mb-20">Skills and Experience</h6>
                        <div class="job__tags job__details__tags">
                            @foreach (var skill in Model.Skills)
                            {
                                <a href="#" class="job__tag">@skill</a>
                            }
                        </div>
                    </div>
                    <h6 class="fw-semibold text-capitalize mb-30 mt-30">Award</h6>
                    <ul class="timeline">
                        @foreach (var award in Model.Awards)
                        {
                            <li>
                                <span class="timeline__title d-block">@award.Title</span>
                                <span class="timeline__subtitle d-block">@award.Year</span>
                                <p class="mt-2 fw-medium">@award.Description</p>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-5 col-xl-4 d-flex flex-column gap-40">
                <div class="job__overview">
                    <h6 class="fw-semibold mb-20">Candidate Overview</h6>
                    <div class="job__overview__content">
                        <ul>
                            <li class="d-flex flex-wrap gap-3 gap-sm-0 align-items-center justify-content-between">
                                <span class="left-text"><i class="fa-light fa-envelope"></i> Email</span>
                                <span class="text">: @Model.Email</span>
                            </li>
                            <li class="d-flex flex-wrap gap-3 gap-sm-0 align-items-center justify-content-between">
                                <span class="left-text"><i class="fa-light fa-phone"></i> Phone</span>
                                <span class="text">: @Model.PhoneNumber</span>
                            </li>
                            <li class="d-flex flex-wrap gap-3 gap-sm-0 align-items-center justify-content-between">
                                <span class="left-text"><i class="fa-light fa-briefcase"></i> Working Type</span>
                                <span class="text">: @Model.WorkingType</span>
                            </li>
                            <li class="d-flex flex-wrap gap-3 gap-sm-0 align-items-center justify-content-between">
                                <span class="left-text"><i class="fa-light fa-users"></i> Followers</span>
                                <span class="text">: @Model.FollowerCount</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <!-- share  -->
                <div class="job__contact d-flex align-items-center gap-3">
                    <h6 class="fw-semibold mb-0">Share</h6>
                    <div class="rts__social sidebar d-flex gap-3">
                        <a target="_blank" href="../../../facebook.com/index.html" aria-label="facebook">
                            <i class="fa-brands fa-facebook"></i>
                        </a>
                        <a target="_blank" href="../../../instagram.com/index.html" aria-label="instagram">
                            <i class="fa-brands fa-instagram"></i>
                        </a>
                        <a target="_blank" href="../../../linkedin.com/index.html" aria-label="linkedin">
                            <i class="fa-brands fa-linkedin"></i>
                        </a>
                        <a target="_blank" href="../../../pinterest.com/index.html" aria-label="pinterest">
                            <i class="fa-brands fa-pinterest"></i>
                        </a>
                        <a target="_blank" href="../../../youtube.com/index.html" aria-label="youtube">
                            <i class="fa-brands fa-youtube"></i>
                        </a>
                    </div>
                </div>
                <!-- share end -->
            </div>
        </div>
    </div>
</div>
<!-- job list one end -->
