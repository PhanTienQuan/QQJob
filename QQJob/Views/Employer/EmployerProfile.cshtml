@model Employer
    <!-- content area -->
<div class="dashboard__content d-flex">
    <partial name="_LeftMenu" />
    <div class="dashboard__right">
        <div class="dash__content" id="content-area">
            <!-- sidebar menu -->
            <div class="sidebar__menu d-md-block d-lg-none">
                <div class="sidebar__action"><i class="fa-sharp fa-regular fa-bars"></i>Sidebar</div>
            </div>
            <!-- sidebar menu end -->
            <div class="my__profile__tab radius-16 bg-white">
                <form asp-action="UpdateEmployer" method="post" enctype="multipart/form-data">
                    <!-- Thay đổi action thành tên action của bạn -->
                    <div class="my__details" id="info">
                        <div class="info__top">
                            <div class="author__image">
                                <img class="p-4" src="~/assets/img/icon/google.svg" alt="" />
                            </div>
                            <div class="select__image">
                                <label for="file" class="file-upload__label">Upload New Photo</label>
                                <input type="file" class="file-upload__input" id="file" name="File" required />
                            </div>
                            <div class="delete__data">
                                <i class="fa-light fa-trash-can"></i>
                            </div>
                        </div>
                        <div class="info__field">
                            <div class="row row-cols-sm-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label asp-for="User.FullName">Employer name</label>
                                    <input asp-for="User.FullName" placeholder="PTQ Tech" class="mb-3" required />
                                    <span asp-validation-for="User.FullName" class="text-danger"></span>
                                </div>
                                <div class="rt-input-group">
                                    <label asp-for="User.Email">Email</label>
                                    <input type="email" asp-for="User.Email" placeholder="ptqtech@gmail.com" class="mb-3" required />
                                    <span asp-validation-for="User.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row row-cols-sm-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label asp-for="User.PhoneNumber">Phone</label>
                                    <input asp-for="User.PhoneNumber" placeholder="+880171234567" class="mb-3" required />
                                    <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="rt-input-group">
                                    <label asp-for="Website">Website</label>
                                    <input type="url" asp-for="Website" placeholder="jobpath.com" class="mb-3" required />
                                    <span asp-validation-for="Website" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row row-cols-sm-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label asp-for="FoundedDate">Founded Date</label>
                                    <input type="date" placeholder="DD/MM/YY" asp-for="FoundedDate" class="mb-3" required />
                                    <span asp-validation-for="FoundedDate" class="text-danger"></span>
                                </div>
                                <div class="rt-input-group">
                                    <label asp-for="CompanySize">Company Size</label>
                                    <input type="text" asp-for="CompanySize" class="mb-3" placeholder="10 - 20" required />
                                    <span asp-validation-for="CompanySize" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row row-cols-sm-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label asp-for="CompanyField">Company Field</label>
                                    <input asp-for="CompanyField" class="mb-3" placeholder="Marketing" required />
                                    <span asp-validation-for="CompanyField" class="text-danger"></span>
                                </div>
                                <div class="rt-input-group">
                                    <label for="pv">Public For Profile View</label>
                                    <select name="PublicProfile" id="pv" class="form-select">
                                        <option value="1">Yes</option>
                                        <option value="2">No</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row row-cols-md-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label for="pu">Profile Url</label>
                                    <div class="position-relative">
                                        <input type="url" id="pu" name="ProfileUrl" placeholder="https://qqjob.com/company/PTQTech" required />
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="rts__btn fill__btn">Save Profile</button> <!-- Nút submit -->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- content area end -->