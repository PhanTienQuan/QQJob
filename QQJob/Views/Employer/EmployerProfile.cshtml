    <!-- content area -->
<div class="dashboard__content d-flex">
    <partial name="_LeftMenu" />
    <div class="dashboard__right">
        <div class="dash__content" id="content-area">
            <!-- sidebar menu -->
            <div class="sidebar__menu d-md-block d-lg-none">
                <div class="sidebar__action"><i class="fa-sharp fa-regular fa-bars"></i>Sidebar</div>
            </div>
            <!-- sidebar menu end -->
            <div class="my__profile__tab radius-16 bg-white">
                <form asp-action="UpdateEmployer" method="post" enctype="multipart/form-data">
                    <!-- Thay đổi action thành tên action của bạn -->
                    <div class="my__details" id="info">
                        <div class="info__top">
                            <div class="author__image">
                                <img class="p-4" src="~/assets/img/icon/google.svg" alt="" />
                            </div>
                            <div class="select__image">
                                <label for="file" class="file-upload__label">Upload New Photo</label>
                                <input type="file" class="file-upload__input" id="file" name="File" required />
                            </div>
                            <div class="delete__data">
                                <i class="fa-light fa-trash-can"></i>
                            </div>
                        </div>
                        <div class="info__field">
                            <div class="row row-cols-sm-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label for="name">Employer name</label>
                                    <input type="text" id="name" name="Name" placeholder="PTQ Tech" required />
                                </div>
                                <div class="rt-input-group">
                                    <label for="email">Email</label>
                                    <input type="email" id="email" name="Email" placeholder="ptqtech@gmail.com" required />
                                </div>
                            </div>
                            <div class="row row-cols-sm-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label for="phone">Phone</label>
                                    <input type="text" id="phone" name="Phone" placeholder="+880171234567" required />
                                </div>
                                <div class="rt-input-group">
                                    <label for="url">Website</label>
                                    <input type="url" id="url" name="Website" placeholder="jobpath.com" required />
                                </div>
                            </div>
                            <div class="row row-cols-sm-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label for="fd">Founded Date</label>
                                    <input type="text" placeholder="DD/MM/YY" id="fd" name="FoundedDate" required />
                                </div>
                                <div class="rt-input-group">
                                    <label for="cs">Company Size</label>
                                    <select name="CompanySize" id="cs" class="form-select">
                                        <option value="18">10-20</option>
                                        <option value="19">20-30</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row row-cols-sm-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label for="cc">Company categories</label>
                                    <select name="CompanyCategory" id="cc" class="form-select">
                                        <option value="18">Design & Development</option>
                                        <option value="19">Digital Marketing</option>
                                    </select>
                                </div>
                                <div class="rt-input-group">
                                    <label for="pv">Public For Profile View</label>
                                    <select name="PublicProfile" id="pv" class="form-select">
                                        <option value="1">Yes</option>
                                        <option value="2">No</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row row-cols-md-2 row-cols-1 g-3">
                                <div class="rt-input-group">
                                    <label for="pu">Profile Url</label>
                                    <div class="position-relative">
                                        <input type="url" id="pu" name="ProfileUrl" placeholder="https://qqjob.com/company/PTQTech" required />
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="rts__btn fill__btn">Save Profile</button> <!-- Nút submit -->
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- content area end -->