<div class="rts__section section__padding">
    <div class="container">
        <div class="row g-30">
            <div class="col-lg-5 col-xl-4">
                <div class="job__search__section mb-40">
                    <form action="/search-jobs" method="GET" class="d-flex flex-column row-30">
                        <!-- Search By Job Title -->
                        <div class="search__item">
                            <label for="search" class="mb-3 font-20 fw-medium text-dark text-capitalize">Search By Job Title</label>
                            <div class="position-relative">
                                <input type="text" id="search" name="jobTitle" placeholder="Enter Type Of job" required>
                                <i class="fa-light fa-magnifying-glass"></i>
                            </div>
                        </div>

                        <!-- Job Location -->
                        <div class="search__item">
                            <h6 class="mb-3 font-20 fw-medium text-dark text-capitalize">Search Location</h6>
                            <div class="position-relative">
                                <select name="location" class="nice-select">
                                    <option value="">Search Location</option>
                                    <option value="Dhaka">Dhaka</option>
                                    <option value="Barisal">Barisal</option>
                                    <option value="Chittagong">Chittagong</option>
                                    <option value="Rajshahi">Rajshahi</option>
                                </select>
                                <i class="fa-light fa-location-dot"></i>
                            </div>
                        </div>

                        <!-- Job Category -->
                        <div class="search__item">
                            <h6 class="mb-3 font-20 fw-medium text-dark text-capitalize">Search By Job Category</h6>
                            <div class="position-relative">
                                <select name="category" class="nice-select">
                                    <option value="">Choose a Category</option>
                                    <option value="Government">Government</option>
                                    <option value="NGO">NGO</option>
                                    <option value="Private">Private</option>
                                </select>
                                <i class="rt-briefcase"></i>
                            </div>
                        </div>

                        <!-- Experience Level -->
                        <div class="search__item">
                            <h6 class="mb-3 font-20 fw-medium text-dark text-capitalize">Experience Level</h6>
                            <div class="search__item__list">
                                <div class="d-flex align-items-center justify-content-between list">
                                    <div class="d-flex gap-2 align-items-center checkbox">
                                        <input type="checkbox" name="experience" value="5year" id="5year">
                                        <label for="5year">5 year</label>
                                    </div>
                                    <span>(10)</span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between list">
                                    <div class="d-flex gap-2 align-items-center checkbox">
                                        <input type="checkbox" name="experience" value="4year" id="4year">
                                        <label for="4year">4 year</label>
                                    </div>
                                    <span>(15)</span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between list">
                                    <div class="d-flex gap-2 align-items-center checkbox">
                                        <input type="checkbox" name="experience" value="3year" id="3year">
                                        <label for="3year">3 year</label>
                                    </div>
                                    <span>(50)</span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between list">
                                    <div class="d-flex gap-2 align-items-center checkbox">
                                        <input type="checkbox" name="experience" value="fresher" id="fresher">
                                        <label for="fresher">Fresher</label>
                                    </div>
                                    <span>(130)</span>
                                </div>
                            </div>
                        </div>

                        <!-- Salary Range -->
                        <div class="search__item">
                            <h6 class="mb-3 font-20 fw-medium text-dark text-capitalize">Salary Offered</h6>
                            <div class="search__item__list">
                                <div class="d-flex align-items-center justify-content-between list">
                                    <div class="d-flex gap-2 align-items-center checkbox">
                                        <input type="checkbox" name="salary" value="Under500" id="500">
                                        <label for="500">Under $500</label>
                                    </div>
                                    <span>(10)</span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between list">
                                    <div class="d-flex gap-2 align-items-center checkbox">
                                        <input type="checkbox" name="salary" value="5000" id="5000">
                                        <label for="5000">$5,000 - $10,000</label>
                                    </div>
                                    <span>(44)</span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between list">
                                    <div class="d-flex gap-2 align-items-center checkbox">
                                        <input type="checkbox" name="salary" value="10000" id="1000">
                                        <label for="1000">$10,000 - $15,000</label>
                                    </div>
                                    <span>(27)</span>
                                </div>
                                <div class="d-flex align-items-center justify-content-between list">
                                    <div class="d-flex gap-2 align-items-center checkbox">
                                        <input type="checkbox" name="salary" value="15000" id="1500">
                                        <label for="1500">$15,000 - $20,000</label>
                                    </div>
                                    <span>(85)</span>
                                </div>
                            </div>
                        </div>
                        <!-- Submit Button -->
                        <button type="submit" class="rts__btn no__fill__btn max-content mx-auto job__search__btn font-sm">Find Job</button>
                    </form>
