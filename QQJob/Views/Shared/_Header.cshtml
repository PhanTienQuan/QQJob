@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@using QQJob.Models
@inject QQJob.Repositories.Interfaces.INotificationRepository NotificationRepository
@{
    AppUser? currentUser = null;
    string? userRole = null;
    List<Notification> notifications = new();
    int unreadCount = 0;

    if (SignInManager.IsSignedIn(User))
    {
        currentUser = await UserManager.GetUserAsync(User);
        userRole = (await UserManager.GetRolesAsync(currentUser)).FirstOrDefault();

        if (currentUser != null)
        {
            notifications = await NotificationRepository.GetUserNotificationsAsync(currentUser.Id, 5);
            unreadCount = await NotificationRepository.GetUserUnreadNotificationCountAsync(currentUser.Id);
        }
    }
}

<!-- header area -->
<header class="rts__section rts__dashboard__header position-fixed w-100">
    <div class="container-fluid g-0">
        <div class="rts__menu__background mw-100 px-20 mobile__padding rounded-0">
            <div class="row">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="rts__logo">
                        <a asp-controller="Home" asp-action="Index">
                            @* <img class="logo__image" src="~/assets/img/logo/logo.jpg" width="40" alt="logo"/> *@
                            <span style="color: green; font-weight: bold; font-size: xx-large" >QQJob</span>
                        </a>
                    </div>
                    <div class="rts__menu d-flex gap-5 gap-lg-4 gap-xl-5 align-items-center">
                        <div class="navigation d-none d-lg-block">
                            <nav class="navigation__menu" id="offcanvas__menu">
                                <ul class="list-unstyled">
                                    <li class="navigation__menu--item has-child" role="menuitem">
                                        <a asp-controller="Home" asp-action="Index" class="navigation__menu--item__link">Home</a>
                                    </li>
                                    <!-- Other Menus -->
                                    <li class="navigation__menu--item has-child" role="menuitem">
                                        <a asp-controller="Home" asp-action="EmployerList" class="navigation__menu--item__link">Employers</a>
                                    </li>
                                    <!-- Browse Jobs -->
                                    <li class="navigation__menu--item has-child" role="menuitem">
                                        <a asp-controller="Jobs" asp-action="Index" class="navigation__menu--item__link">Browse Jobs</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>

                        <!-- Header Buttons -->
                        <div class="header__right__btn d-flex align-items-center gap-30">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                @if (userRole != null)
                                {
                                    var groupedNotifications = notifications
                                    .GroupBy(n => n.CreatedDate.Date)
                                    .OrderByDescending(g => g.Key)
                                    .ToList();
                                    <div class="notification__btn">
                                        <div class="notification__icon" data-bs-toggle="dropdown">
                                            <svg width="23" height="27" viewBox="0 0 23 27" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M22.4936 16.8814L20.125 14.5128V11.375C20.1223 9.20661 19.3156 7.11624 17.8611 5.50811C16.4065 3.89998 14.4072 2.88832 12.25 2.66875V0.875H10.5V2.66875C8.34275 2.88832 6.34354 3.89998 4.88895 5.50811C3.43436 7.11624 2.62771 9.20661 2.625 11.375V14.5128L0.256375 16.8814C0.0922693 17.0454 4.95577e-05 17.268 0 17.5V20.125C0 20.3571 0.0921872 20.5796 0.256282 20.7437C0.420376 20.9078 0.642936 21 0.875 21H7V21.6799C6.98058 22.79 7.3717 23.8683 8.09836 24.7078C8.82501 25.5473 9.83603 26.089 10.9375 26.229C11.5458 26.2893 12.16 26.2217 12.7405 26.0304C13.3211 25.8391 13.8552 25.5284 14.3085 25.1183C14.7617 24.7082 15.1242 24.2078 15.3724 23.6492C15.6207 23.0906 15.7493 22.4863 15.75 21.875V21H21.875C22.1071 21 22.3296 20.9078 22.4937 20.7437C22.6578 20.5796 22.75 20.3571 22.75 20.125V17.5C22.75 17.268 22.6577 17.0454 22.4936 16.8814ZM14 21.875C14 22.5712 13.7234 23.2389 13.2312 23.7312C12.7389 24.2234 12.0712 24.5 11.375 24.5C10.6788 24.5 10.0111 24.2234 9.51884 23.7312C9.02656 23.2389 8.75 22.5712 8.75 21.875V21H14V21.875ZM21 19.25H1.75V17.8623L4.11862 15.4936C4.28273 15.3296 4.37495 15.107 4.375 14.875V11.375C4.375 9.51849 5.1125 7.73801 6.42525 6.42525C7.73801 5.1125 9.51848 4.375 11.375 4.375C13.2315 4.375 15.012 5.1125 16.3247 6.42525C17.6375 7.73801 18.375 9.51849 18.375 11.375V14.875C18.375 15.107 18.4673 15.3296 18.6314 15.4936L21 17.8623V19.25Z" fill="#0B0D28" />
                                            </svg>
                                            <span class="notification__count">@unreadCount</span>
                                        </div>

                                        <div class="rts__dropdown notification__dropdown dropdown-menu top-25">
                                            <div class="rts__dropdown__content">
                                                <div class="notification__header">
                                                    <h6>Notification</h6>
                                                    <a href="/Notification/All"><i class="fa-light fa-gear"></i></a>
                                                </div>

                                                <div class="notification__body">
                                                    @if (groupedNotifications.Any())
                                                    {
                                                        foreach (var group in groupedNotifications)
                                                        {
                                                            <span class="notification__date">@Helper.DisplayDate(group.Key)</span>
                                                            <div class="notification__body">
                                                                @foreach (var notification in group)
                                                                {
                                                                    <div class="single__notification @(notification.IsReaded ? "" : "unread")"
                                                                         data-id="@notification.Id"
                                                                         onclick="markNotificationRead(@notification.Id, this)">
                                                                        <div class="notification__image">
                                                                            <img src="~/assets/img/icon/notification.svg" alt="">
                                                                        </div>
                                                                        <div class="notification__content">
                                                                            <p>@notification.Content</p>
                                                                        </div>
                                                                        <div class="time">
                                                                            <span>@Helper.DisplayTime(notification.CreatedDate)</span>
                                                                        </div>
                                                                    </div>
                                                                }
                                                            </div>
                                                        }

                                                        @if (unreadCount > 5)
                                                        {
                                                            <div class="text-center mt-2">
                                                                <a href="/Notification/All" class="btn btn-sm btn-secondary">View All Notifications</a>
                                                            </div>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <div class="single__notification">
                                                            <div class="notification__content">
                                                                <p>No notifications.</p>
                                                            </div>
                                                        </div>
                                                    }

                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                }
                                <div class="user__info">
                                    <div class="d-flex gap-3 align-items-center pointer" data-bs-toggle="dropdown">
                                        <div class="user__image">
                                            <img class="rounded-5" width="48" height="48" src="@await Helper.GetUserAvatarUrlAsync(User.Identity?.Name)" alt="">
                                        </div>
                                        <div class="user__name d-none d-xl-block">
                                            <h6 class="font-20 mb-0 fw-medium lh-sm">@await Helper.GetFullNameAsync(User.Identity?.Name)</h6>
                                            <span>@(userRole != null ? userRole : "Account need set up")</span>
                                        </div>
                                        <div class="dropdown__option d-none d-xl-block">
                                            <div class="dropdown__icon "><i class="fa-light fa-chevron-down"></i></div>
                                        </div>
                                    </div>
                                    <ul class="rts__dropdown dropdown-menu top-25">
                                        @if (userRole != null)
                                        {
                                            <li><a class="dropdown-item" class="nav-link" asp-controller="@userRole" asp-action="Index">Dashboard</a></li>
                                            <li><a class="dropdown-item" class="nav-link" asp-controller="@userRole" asp-action="Profile">Profile</a></li>
                                            <li><a class="dropdown-item" class="nav-link" asp-controller="Message" asp-action="Index">Message</a></li>
                                            @if (User.IsInRole("Candidate"))
                                            {
                                                <li><a class="dropdown-item" class="nav-link" asp-controller="Candidate" asp-action="Resume">Resume</a></li>
                                            }
                                        }
                                        <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account">Log Out</a></li>
                                    </ul>
                                </div>
                                @await Helper.GetUserHomePageAction(User.Identity?.Name, Url)
                            }
                            else{
                                <a href="#" onclick="showLoginModal()" class="small__btn d-none d-sm-flex no__fill__btn border-6 font-xs">
                                    <i class="rt-login"></i>Sign In
                                </a>
                            }
                            
                            <button class="d-md-block d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvas" aria-controls="offcanvas">
                                <i class="fa-sharp fa-regular fa-bars"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvas" aria-labelledby="offcanvasLabel">
        <div class="offcanvas-header border-bottom py-3 px-4">
            <h5 class="offcanvas-title fw-bold" id="offcanvasLabel" style="color: green; font-size: 1.5rem;">QQJob</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body px-4 py-4" style="background-color: #fff;">
            <ul class="list-unstyled">
                <li class="mb-3">
                    <a asp-controller="Home" asp-action="Index" class="nav-link fw-medium" style="font-size: 1.1rem; color: #0B0D28;">Home</a>
                </li>
                <li class="mb-3">
                    <a asp-controller="Jobs" asp-action="Index" class="nav-link fw-medium" style="font-size: 1.1rem; color: #0B0D28;">Browse Jobs</a>
                </li>
            </ul>
        </div>
    </div>


</header>
