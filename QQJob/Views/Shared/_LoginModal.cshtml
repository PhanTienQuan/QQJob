@model LoginViewModel
    <!--LOGIN FORM-->
<div class="modal similar__modal fade" id="loginModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="max-content similar__form form__padding">

                <div class="d-flex mb-3 align-items-center justify-content-between">
                    <h6 class="mb-0">Sign in</h6>
                    <button type="button" data-bs-dismiss="modal" aria-label="Close" >
                        <i class="fa-regular fa-xmark text-primary"></i>
                    </button>
                </div>
                <div class="d-block has__line text-center mb-30">
                    <p>Choose your Account Type</p>
                </div>

                <!-- Form for login -->
                <form class="d-flex flex-column gap-3" id="loginForm">
                    <divx2 asp-validation-summary="All" class="text-success"></divx2>
                    <divx asp-validation-summary="All" class="text-danger"></divx>
                    <div class="form-group">
                        <label asp-for="Email" class="fw-medium text-dark mb-3"></label>
                        <div class="position-relative">
                            <input asp-for="Email" class="form-control" />
                            <i class="fa-light fa-user icon"></i>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="fw-medium text-dark mb-3">Password</label>
                        <div class="position-relative">
                            <input asp-for="Password" class="form-control" />
                            <i class="fa-light fa-lock icon"></i>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="d-flex flex-wrap justify-content-between align-items-center fw-medium">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label" asp-for="RememberMe">
                            </label>
                        </div>
                        <a href="#" class="forgot__password text-para" data-bs-toggle="modal" data-bs-target="#forgotModal">
                            Forgot Password?
                        </a>
                    </div>
                    <div class="form-group my-3">
                        <button type="button" onclick="login()" class="rts__btn w-100 fill__btn">Login</button>
                    </div>
                </form>

                <div class="d-block has__line text-center">
                    <p>Or</p>
                </div>

                <!-- Social Login -->
                <div class="d-flex gap-4 flex-wrap justify-content-center mt-20 mb-20">
                    <div class="is__social google">
                        <button>
                            <img src="assets/img/icon/google-small.svg" alt="" /> Continue with Google
                        </button>
                    </div>
                    <div class="is__social facebook">
                        <button>
                            <img src="assets/img/icon/facebook-small.svg" alt="" /> Continue with Facebook
                        </button>
                    </div>
                </div>

                <span class="d-block text-center fw-medium">
                    Don’t have an account?
                    <a href="#" onclick="showRegisterModal()" data-bs-dismiss="modal" class="text-primary">Sign Up</a>
                </span>
            </div>
        </div>
    </div>
</div>
