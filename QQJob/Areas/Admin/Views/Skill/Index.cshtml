@model IEnumerable<Skill>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Skill List
            @* <small>preview of simple tables</small> *@
        </h1>
        <ol class="breadcrumb">
            <li>
                <a asp-action="Index" asp-controller="Home" asp-area="Admin">
                    <i class="fa fa-dashboard"></i>
                    Home
                </a>
            </li>
            <li><a href="#">Manage Skill</a></li>
            <li class="active">Skill List</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Skill List</h3>

                        <div class="box-tools">
                            <div class="input-group input-group-sm"
                                 style="width: 150px">
                                <input type="text"
                                       name="table_search"
                                       class="form-control pull-right"
                                       placeholder="Search" />

                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table table-hover table-bordered">
                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.SkillId)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.SkillName)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    #
                                </th>
                                <th>
                                    #
                                </th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SkillId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SkillName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td><a href='#' class='btn btn-sm btn-primary'>Edit</a></td>
                                    <td><a href='#' class='btn btn-sm btn-danger'>Delete</a></td>
                                </tr>
                            }
                        </table>
                    </div>

                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <a asp-area="Admin" asp-controller="Skill" asp-action="Create" class='btn btn-sm btn-primary pull-left'>Create new skill</a>
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>

    </section>
    <!-- /.content -->
</div>