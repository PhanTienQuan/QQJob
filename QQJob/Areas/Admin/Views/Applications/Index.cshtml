@model IEnumerable<QQJob.Models.Application>

@{
    ViewData["Title"] = "Index";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            All Roles
        </h1>
        <ol class="breadcrumb">
            <li>
                <a asp-action="Index" asp-controller="Home" asp-area="Admin">
                    <i class="fa fa-dashboard"></i>
                    Home
                </a>
            </li>
            <li><a href="#">Manage Applications</a></li>
            <li class="active">All Applications</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    @if (TempData["Message"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong>@TempData["Message"]</strong>
                        </div>
                    }
                    <div class="box-header">
                        <h3 class="box-title"></h3>

                        <div class="box-tools">
                            <div class="input-group input-group-sm"
                                 style="width: 150px">
                                <input type="text"
                                       name="table_search"
                                       class="form-control pull-right"
                                       placeholder="Search" />

                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive no-padding">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Job)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Candidate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ApplicationDate)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CoverLetter)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AIRanking)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Job.JobTitle)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Candidate.CandidateId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ApplicationDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CoverLetter)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Status)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AIRanking)
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.ApplicationId">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.ApplicationId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.ApplicationId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <a asp-action="Create" class='btn btn-sm btn-primary pull-left'>Create New</a>
                        <ul class="pagination pagination-sm no-margin pull-right">
                            <li><a href="#">&laquo;</a></li>
                            <li><a href="#">1</a></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->

</div>
