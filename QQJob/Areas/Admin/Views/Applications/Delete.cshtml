@model QQJob.Models.Application

@{
    ViewData["Title"] = "Delete";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Delete Application
        </h1>
        <ol class="breadcrumb">
            <li>
                <a asp-action="Index" asp-controller="Home" asp-area="Admin">
                    <i class="fa fa-dashboard"></i>
                    Home
                </a>
            </li>
            <li><a asp-action="Index">Manage Applications</a></li>
            <li class="active">Delete Application</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <h3>Are you sure you want to delete this?</h3>
                    <div>
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Job)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Job.JobTitle)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Candidate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Candidate.CandidateId)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.ApplicationDate)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.ApplicationDate)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CoverLetter)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CoverLetter)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Status)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Status)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.AIRanking)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.AIRanking)
                            </dd>
                        </dl>

                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer clearfix">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ApplicationId" />
                            <input type="submit" value="Delete" class="btn btn-sm me-2 btn-danger" />
                            <a asp-action="Index" class='btn btn-sm btn-primary me-2'>Back to List</a>
                        </form>
                    </div>
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->

</div>

