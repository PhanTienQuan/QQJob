@model IEnumerable<Employer>
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Responsive Hover Table</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm"
                         style="width: 150px">
                        <input type="text"
                               name="table_search"
                               class="form-control pull-right"
                               placeholder="Search" />

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default">
                                <i class="fa fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover table-bordered ">
                    <tr>

                        <th >
                            @Html.DisplayNameFor(model => model.EmployerId)
                        </th>

                        <th >
                            @Html.DisplayNameFor(model => model.User.UserName)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.FoundedDate)
                        </th>
                        <th>
                            Status
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        var Date = item.FoundedDate.ToShortDateString() == "1/1/0001" ? "Not set" : item.FoundedDate.ToShortDateString();
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.EmployerId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.User.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Date)
                            </td>
                            <td class="text-center">
                                @switch (item.User.IsVerified)
                                {
                                    case Status.Pending:
                                        <span class="label label-warning">Pending</span>
                                        break;
                                    case Status.Approved:
                                        <span class="label label-success">Approved</span>
                                        break;
                                    case Status.Denied:
                                        <span class="label label-danger">Denied</span>
                                        break;
                                }
                            </td>
                            <td class="text-center">
                                <a asp-area="Admin" asp-controller="User" asp-action="Detail" class='btn btn-sm btn-primary'>Check</a>
                                <a href='#' class='btn btn-sm btn-success  @(item.User.IsVerified == Status.Approved ? "disabled" : "")'>Approve</a>
                                <a href='#' class='btn btn-sm btn-danger'> @(item.User.IsVerified == Status.Approved ? "Cancel" : "Deny") </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <!-- /.box-body -->
            <div class="box-footer clearfix">
                <ul class="pagination pagination-sm no-margin pull-right">
                    <li><a href="#">&laquo;</a></li>
                    <li><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">&raquo;</a></li>
                </ul>
            </div>
        </div>
        <!-- /.box -->
    </div>
</div>
