        <div class="card mb-4 mt-4">
            <div class="table-responsive">
                @(
                    Html.Grid(Model.Users).Build(columns =>
                    {
                        columns.Add(model => model.Id).Titled("ID");
                        columns.Add(model => model.UserName).Titled("Name");
                        columns.Add(model => model.Email).Titled("Email");
                        columns.Add(model => model.Slug).Titled("Slug");
                        columns.Add(model => model.CreatedAt).Titled("Create Date");
                        // Add more columns as needed
                    })
                    .Filterable(GridFilterCase.Lower)
                    .Using(GridFilterMode.Header)
                    .Empty("No data found")
                    .Pageable(pager =>
                    {
                        pager.RowsPerPage = 4;
                    })
                    .Sortable()
                    )
            </div>
