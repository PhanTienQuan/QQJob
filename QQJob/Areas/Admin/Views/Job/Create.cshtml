@model QQJob.Models.Job

@{
    ViewData["Title"] = "Create";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Create Job
        </h1>
        <ol class="breadcrumb">
            <li>
                <a asp-action="Index" asp-controller="Home" asp-area="Admin">
                    <i class="fa fa-dashboard"></i>
                    Home
                </a>
            </li>
            <li><a href="#">Manage Job</a></li>
            <li class="active">Create Job</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="JobTitle" class="control-label"></label>
                        <input asp-for="JobTitle" class="form-control" />
                        <span asp-validation-for="JobTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Salary" class="control-label"></label>
                        <input asp-for="Salary" class="form-control" />
                        <span asp-validation-for="Salary" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SalaryType" class="control-label"></label>
                        <select asp-for="SalaryType" class="form-control">
                            <option value="">Select Salary Type</option>
                            <option>Year</option>
                            <option>Month</option>
                            <option>Hour</option>
                        </select>
                        <span asp-validation-for="SalaryType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LocationRequirement" class="control-label"></label>
                        <select asp-for="LocationRequirement" class="form-control">
                            <option value="">Select Location Requirement</option>
                            <option>Remote</option>
                            <option>Onsite</option>
                            <option>Hybrid</option>
                        </select>
                        <span asp-validation-for="LocationRequirement" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="JobType" class="control-label"></label>
                        <select asp-for="JobType" class="form-control">
                            <option value="">Select Job Type</option>
                            <option>Fulltime</option>
                            <option>Part-time</option>
                            <option>Contract</option>
                        </select>
                        <span asp-validation-for="JobType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ExperienceLevel" class="control-label"></label>
                        <select asp-for="ExperienceLevel" class="form-control">
                            <option value="">Select Experience Level</option>
                            <option>Junior</option>
                            <option>Mid</option>
                            <option>Senior</option>
                        </select>
                        <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        <label asp-for="Description" class="control-label"></label>

                        <textarea asp-for="Description" class="textarea" placeholder="Message"
                                  style="width: 100%; height: 125px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PostDate" class="control-label"></label>
                        <input asp-for="PostDate" class="form-control" type="date" />
                        <span asp-validation-for="PostDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CloseDate" class="control-label"></label>
                        <input asp-for="CloseDate" class="form-control" type="date" />
                        <span asp-validation-for="CloseDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusList"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Slug" class="control-label"></label>
                        <input asp-for="Slug" class="form-control" />
                        <span asp-validation-for="Slug" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opening" class="control-label"></label>
                        <input asp-for="Opening" class="form-control" />
                        <span asp-validation-for="Opening" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ViewCount" class="control-label"></label>
                        <input asp-for="ViewCount" class="form-control" />
                        <span asp-validation-for="ViewCount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EmployerId" class="control-label"></label>
                        <select asp-for="EmployerId" class="form-control" asp-items="ViewBag.EmployerId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}