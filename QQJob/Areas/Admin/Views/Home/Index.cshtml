@model HomeViewModel
@{
    ViewData["Title"] = "Dashboard";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
            <small>Control panel</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Dashboard</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>@Model.NewJobs.Count()</h3>

                        <p>New Posting</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>@Model.NewUsers.Count()</h3>

                        <p>New User Registrations</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>@Model.PendingJobs</h3>
                        @* <sup style="font-size: 20px">%</sup> *@
                        <p>Pending Jobs</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
            
            <div class="col-lg-3 col-xs-6">
                <!-- small box -->
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>@Model.TotalJobPosting</h3>

                        <p>Total Jobs Posting</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
            <!-- ./col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <div class="row">
            <section class="col-lg-7 connectedSortable">
                <!-- Custom tabs (Charts with tabs)-->
                <div class="nav-tabs-custom">
                    <!-- Tabs within a box -->
                    <ul class="nav nav-tabs pull-right">
                        <li class="active"><a href="#stats-chart" data-toggle="tab">Chart</a></li>
                        @* <li><a href="#stats-chart" data-toggle="tab">Donut</a></li> *@
                        <li class="pull-left header"><i class="fa fa-inbox"></i> Growth</li>
                    </ul>
                    <div class="tab-content no-padding">
                        <!-- Morris chart - Sales -->
                        <div class="chart tab-pane active" id="stats-chart" style="position: relative; height: 300px;"></div>
                        <div class="chart tab-pane" id="sales-chart" style="position: relative; height: 300px;"></div>
                    </div>
                </div>
                <!-- /.nav-tabs-custom -->
                <!-- /.box (chat box) -->
               
            </section>
            @* Recent Users Start*@
            <section class="col-lg-12 connectedSortable">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Recent Users</h3>

                        <div class="box-tools pull-right">
                            <button type="button"
                                    class="btn btn-box-tool"
                                    data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button"
                                    class="btn btn-box-tool"
                                    data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="pad">
                                    <div class="box-body table-responsive no-padding">
                                        <table class="table table-hover table-bordered">
                                            <tr>
                                                <th>
                                                    Id
                                                </th>

                                                <th>
                                                    FullName
                                                </th>
                                                <th>
                                                    Email
                                                </th>
                                                <th>
                                                    CreatedAt
                                                </th>
                                                <th>
                                                    Status
                                                </th>
                                            </tr>
                                            @if (Model.RecentUsers.Any())
                                            {
                                                @foreach (var item in Model.RecentUsers)
                                                {
                                                    <tr>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Id)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.UserName)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.Email)
                                                        </td>
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.CreatedAt)
                                                        </td>
                                                        <td class="text-center">
                                                            @switch (item.IsVerified)
                                                            {
                                                                case UserStatus.Unverified:
                                                                    <span class="label label-warning">Unverified</span>
                                                                    break;
                                                                case UserStatus.Pending:
                                                                    <span class="label label-info">Pending</span>
                                                                    break;
                                                                case UserStatus.Verified:
                                                                    <span class="label label-success">Verified</span>
                                                                    break;
                                                                case UserStatus.Suspended:
                                                                    <span class="label label-danger">Suspended</span>
                                                                    break;
                                                                case UserStatus.Rejected:
                                                                    <span class="label label-danger">Rejected</span>
                                                                    break;
                                                            }
                                                        </td>
                                                        <td class="text-center">
                                                            <a asp-area="Admin" asp-controller="User" asp-action="Detail" class='btn btn-sm btn-primary'>Check</a>
                                                            @if (item.IsVerified == UserStatus.Unverified || item.IsVerified == UserStatus.Pending)
                                                            {
                                                                <form method="post" asp-action="Verify" asp-route-UserId="@item.Id" style="display:inline;">
                                                                    <button type="submit" class="btn btn-sm btn-success">Verify</button>
                                                                </form>
                                                            }
                                                            else if (item.IsVerified == UserStatus.Verified)
                                                            {
                                                                <form method="post" asp-action="Suspend" asp-route-UserId="@item.Id" style="display:inline;">
                                                                    <button type="submit" class="btn btn-sm btn-warning">Suspend</button>
                                                                </form>
                                                            }
                                                            else if (item.IsVerified == UserStatus.Suspended)
                                                            {
                                                                <form method="post" asp-action="Unsuspend" asp-route-UserId="@item.Id" style="display:inline;">
                                                                    <button type="submit" class="btn btn-sm btn-info">Unsuspend</button>
                                                                </form>
                                                            }
                                                            <form method="post" asp-controller="User" asp-action="Delete" asp-route-UserId="@item.Id" style="display:inline;">
                                                                <a class="btn btn-sm btn-danger" id="deleteSpan_@item.Id" onclick="confirmDelete('@item.Id', true)">Delete</a>
                                                                <span id="confirmDeleteSpan_@item.Id" style="display:none">
                                                                    <span>Are you sure you want to Delete?</span>
                                                                    <button type="submit" class="btn btn-danger">Yes</button>
                                                                    <a class="btn btn-primary"
                                                                       onclick="confirmDelete('@item.Id', false)">No</a>
                                                                </span>
                                                            </form>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="5" class="text-center">No Users Added Yet</td>
                                                </tr>
                                            }

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                </div>
                
            </section>
            @* Recent Users End*@
            @* Recent Jobs Start *@
            <section class="col-lg-12 connectedSortable">
                <div class="box box-success">
                    <div class="box-header with-border">
                        <h3 class="box-title">Recent Jobs</h3>

                        <div class="box-tools pull-right">
                            <button type="button"
                                    class="btn btn-box-tool"
                                    data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button"
                                    class="btn btn-box-tool"
                                    data-widget="remove">
                                <i class="fa fa-times"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body no-padding">
                        <div class="row">
                            <div class="col-md-12 col-sm-12">
                                <div class="pad">
                                    <div class="box-body table-responsive no-padding">
                                        <table class="table table-hover table-bordered">
                                            <tr>
                                                <th>
                                                    JobId
                                                </th>

                                                <th>
                                                    EmployerId
                                                </th>
                                                <th>
                                                    FullName
                                                </th>
                                                <th>
                                                    JobTitle
                                                </th>
                                                <th>
                                                    PostDate
                                                </th>
                                                <th>
                                                    CloseDate
                                                </th>
                                                <th>
                                                    Status
                                                </th>
                                            </tr>

                                            @foreach (var item in Model.RecentJobs)
                                            {
                                                var closeDate = item.CloseDate.ToString("dd/MM/yyyy");
                                                var openDate = item.PostDate.ToString("dd/MM/yyyy");
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.JobId)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.EmployerId)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Employer.User.FullName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.JobTitle)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => openDate)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => closeDate)
                                                    </td>
                                                    <td class="text-center">
                                                        @switch (item.Status)
                                                        {
                                                            case Status.Pending:
                                                                <span class="label label-warning">Pending</span>
                                                                break;
                                                            case Status.Approved:
                                                                <span class="label label-success">Approved</span>
                                                                break;
                                                            case Status.Closed:
                                                                <span class="label label-default">Closed</span>
                                                                break;
                                                            case Status.Denied:
                                                                <span class="label label-danger">Denied</span>
                                                                break;
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        <a asp-area="Admin" asp-controller="Job" asp-action="Detail" asp-route-id="@item.JobId" class='btn btn-sm btn-primary'>Check</a>
                                                        @switch (item.Status)
                                                        {
                                                            case Status.Pending:
                                                                <a asp-area="Admin" asp-controller="Job" asp-action="UpdateJobStatus" asp-route-id="@item.JobId" asp-route-status="@Status.Approved" class='btn btn-sm btn-success' onclick="return confirm('Are you sure you want to approve this job?');">Approve</a>
                                                                <a asp-area="Admin" asp-controller="Job" asp-action="UpdateJobStatus" asp-route-id="@item.JobId" asp-route-status="@Status.Denied" onclick="return confirm('Are you sure you want to reject this job?');" class='btn btn-sm btn-danger'>Reject</a>
                                                                break;
                                                            case Status.Approved:
                                                                <a class="btn btn-sm label-danger" asp-area="Admin" asp-controller="Job" asp-action="UpdateJobStatus" asp-route-id="@item.JobId" asp-route-status="@Status.Closed" onclick="return confirm('Are you sure you want to close this job?');">Close</a>
                                                                break;
                                                            case Status.Denied:
                                                                <a asp-area="Admin" asp-controller="Job" asp-action="UpdateJobStatus" asp-route-id="@item.JobId" asp-route-status="@Status.Approved" class='btn btn-sm btn-success' onclick="return confirm('Are you sure you want to approve this job?');">Approve</a>
                                                                break;
                                                            case Status.Closed:
                                                                <a class="btn btn-sm label-warning" asp-area="Admin" asp-controller="Job" asp-action="UpdateJobStatus" asp-route-id="@item.JobId" asp-route-status="@Status.Pending" onclick="return confirm('Are you sure you want to reopen this job?');">Open</a>
                                                                break;
                                                        }

                                                    </td>
                                                </tr>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.row -->
                    </div>
                    <!-- /.box-body -->
                </div>
            </section>
            @* Recent Jobs End *@
            @* Recent Applications Start *@
