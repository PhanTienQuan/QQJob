            </section>
            @* Recent Jobs End *@
        </div>
        <!-- /.row (main row) -->

    </section>

    <!-- /.content -->
</div>

@section Scripts{
   <script>
        var statsData = @Html.Raw(JsonConvert.SerializeObject(Model.Stats));
        new Morris.Line({
            element: 'stats-chart',
            data: statsData.map(function(item) {
                return {
                    y: item.Month,
                    Posts: item.Posts,
                    Users: item.Users,
                    Applications: item.Applications,
                    PostGrowth: item.PostGrowth,
                    UserGrowth: item.UserGrowth,
                    ApplicationGrowth: item.ApplicationGrowth,
                }
            }),
            xkey: 'y',
            ykeys: ['Posts', 'Users', 'Applications'],
            labels: ['Job Posts', 'New Users', 'Applications'],
            lineColors: ['#3c8dbc', '#00a65a', '#f39c12'],
            hideHover: 'auto'
        });
        function confirmDelete(uniqueId, isDeleteClicked) {
            var deleteSpan = 'deleteSpan_' + uniqueId;
            var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;
            if (isDeleteClicked) {
                $('#' + deleteSpan).hide();
                $('#' + confirmDeleteSpan).show();
            } else {
                $('#' + deleteSpan).show();
                $('#' + confirmDeleteSpan).hide();
            }
        }
   </script>
}