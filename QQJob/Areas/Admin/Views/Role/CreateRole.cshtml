@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Create Role
        </h1>
        <ol class="breadcrumb">
            <li>
                <a asp-action="Index" asp-controller="Home" asp-area="Admin">
                    <i class="fa fa-dashboard"></i>
                    Home
                </a>
            </li>
            <li><a href="#">Manage Roles</a></li>
            <li class="active">Create Role</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <form asp-action="CreateRole" method="post" class="mt-3">
                        <div class="box-body">
                            <div asp-validation-summary="All" class="text-danger">
                            </div>
                            <div class="form-group row">
                                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="RoleName" class="form-control" placeholder="Name">
                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer clearfix">
                            <button type="submit" class='btn btn-sm btn-primary pull-left'>Create new role</button>
                        </div>
                    </form>
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
